<UserControl
    x:Class="VisualThreading.ToolWindows.BuildingWindowControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:toolkit="clr-namespace:Community.VisualStudio.Toolkit;assembly=Community.VisualStudio.Toolkit"
    toolkit:Themes.UseVsTheme="True">

    <Grid ShowGridLines="True"
          Height="100%"
          Width="100%"
          Background="{Binding Path=Background, Source={StaticResource WindowBackgroundBrush}}">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="15*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="6*" />
        </Grid.ColumnDefinitions>

        <StackPanel
            x:Name="history_list"
            Grid.Row="0"
            Grid.Column="0">

            <Label
                x:Name="VariableLabel"
                HorizontalAlignment="Left"
                MouseMove="Variable_MouseMove">
                <Run
                    x:Name="Variable"
                    Background="red"
                    Text="Variable" />
            </Label>

            <Label
                x:Name="OperatorLabel"
                HorizontalAlignment="Left"
                MouseMove="Operator_MouseMove">
                <Run
                    x:Name="Operator"
                    Background="Green"
                    Text="Operator" />
            </Label>

            <Label
                x:Name="IfLabelLabel"
                HorizontalAlignment="Left"
                MouseMove="If_MouseMove">
                <Run
                    x:Name="Iflabel"
                    Background="Aqua"
                    Text="if ( conditions ) { &#xD;&#xA;    statements&#xD;&#xA;} " />
            </Label>

            <Label
                x:Name="IfelseLabelLabel"
                HorizontalAlignment="Left"
                MouseMove="IfElse_MouseMove">
                <Run
                    x:Name="Ifelselabel"
                    Background="yellow"
                    Text="if ( conditions ) { &#xD;&#xA;    statements &#xD;&#xA;} else { &#xD;&#xA;    statements &#xD;&#xA;} " />
            </Label>
        </StackPanel>

        <Canvas
            Grid.Column="1"
            Grid.Row="0"
            x:Name="canvasLabels"
            AllowDrop="True"
            Background="{DynamicResource {x:Static SystemColors.InfoBrushKey}}"
            Drop="Canvas_Drop"
            PreviewMouseLeftButtonUp="CanvasLabel_PreviewMouseLeftButtonUp"
            PreviewMouseMove="CanvasLabel_PreviewMouseMove"
            ScrollViewer.HorizontalScrollBarVisibility="Visible" Margin="0,0,3,0" />

        <Button Grid.Column="2" Grid.Row="1" Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}">
            <Label Background="#00000000" FontWeight="Normal" FontStyle="Normal">Insert To Code</Label>
        </Button>
    </Grid>
</UserControl>