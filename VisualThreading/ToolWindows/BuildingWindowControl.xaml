<UserControl
    x:Class="VisualThreading.BuildingWindowControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:catalog="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.ImageCatalog"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:imaging="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.Imaging"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:theming="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Imaging"
    xmlns:toolkit="clr-namespace:Community.VisualStudio.Toolkit;assembly=Community.VisualStudio.Toolkit"
    xmlns:util="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Utilities"
    xmlns:visuals="http://np.com/visuals"
    Name="BuildingWindow"
    d:DesignHeight="500"
    d:DesignWidth="1000"
    mc:Ignorable="d">

    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid
            x:Name="grid1"
            Grid.Row="0"
            Grid.Column="0">
            <TextBox
                x:Name="variable"
                Width="120"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="AntiqueWhite"
                MouseMove="TextBox_MouseMove"
                Text="Variable"
                TextChanged="TextBox_TextChanged_variable"
                TextWrapping="Wrap" />
            <TextBox
                Width="120"
                Margin="0,28,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="Green"
                Text="Operater"
                TextChanged="TextBox_TextChanged_operator"
                TextWrapping="Wrap" />
            <TextBox
                Width="118"
                Height="52"
                Margin="0,56,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="Aqua"
                Text="if ( conditions ) {&#xD;&#xA;    statements&#xD;&#xA;}" />
            <TextBox
                Width="118"
                Height="81"
                Margin="0,118,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="Yellow"
                Text="if ( conditions ) {&#xD;&#xA;    statements&#xD;&#xA;} else {&#xD;&#xA;    statements&#xD;&#xA;}" />
            <TextBlock
                x:Name="textblock"
                Width="105"
                Height="22"
                Margin="5,218,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="AliceBlue"
                MouseMove="textblock_MouseMove"
                Text="textblock"
                TextWrapping="Wrap" />

        </Grid>

        <Grid
            x:Name="grid2"
            Grid.Row="0"
            Grid.Column="1"
            Grid.ColumnSpan="2">
            <Label
                x:Name="label_1"
                Width="592"
                Height="391"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                AllowDrop="True"
                Background="AliceBlue"
                DragEnter="Label_DragEnter"
                Drop="Label_Drop" />
        </Grid>

        <Button Grid.Row="1" Grid.Column="2">Insert To Code</Button>
    </Grid>

</UserControl>