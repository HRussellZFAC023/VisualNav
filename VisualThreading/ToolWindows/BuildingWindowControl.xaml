<UserControl
    x:Class="VisualThreading.BuildingWindowControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:catalog="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.ImageCatalog"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:imaging="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.Imaging"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:theming="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Imaging"
    xmlns:toolkit="clr-namespace:Community.VisualStudio.Toolkit;assembly=Community.VisualStudio.Toolkit"
    xmlns:util="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Utilities"
    Name="BuildingWindow"
    d:DesignHeight="500"
    d:DesignWidth="1000"
    mc:Ignorable="d">

    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid
            x:Name="history_list"
            Grid.Row="0"
            Grid.Column="0">

            <Label
                x:Name="VariableLabel"
                Width="99"
                Margin="0,0,0,453"
                HorizontalAlignment="Center"
                MouseMove="Label_MouseMove_From_List">
                <Run
                    Background="red"
                    Text="Variable1" />

            </Label>


            <Label
                x:Name="OperatorLabel"
                Width="99"
                Margin="0,28,0,426"
                HorizontalAlignment="Center"
                MouseMove="Label_MouseMove_From_List">
                <Run
                    Background="Green"
                    Text="Operater1" />
            </Label>



            <Label
                x:Name="IfStatementLabel"
                Width="99"
                Margin="0,60,0,365"
                HorizontalAlignment="Center"
                MouseMove="Label_MouseMove_From_List">
                <Run
                    Background="Aqua"
                    Text="if ( conditions ) { &#xD;&#xA;    statements&#xD;&#xA;} " />
            </Label>


            <Label
                x:Name="IfelseStatementLabel"
                Width="99"
                Margin="0,116,0,276"
                HorizontalAlignment="Center"
                MouseMove="Label_MouseMove_From_List">
                <Run
                    Background="yellow"
                    Text="if ( conditions ) { &#xD;&#xA;    statements &#xD;&#xA;} else { &#xD;&#xA;    statements &#xD;&#xA;} " />
            </Label>

        </Grid>

        <Grid
            Grid.Row="0"
            Grid.RowSpan="1"
            Grid.Column="1"
            Grid.ColumnSpan="2"
        >

            <Canvas
                x:Name="canvasLabels"
                Background="White"
                ScrollViewer.HorizontalScrollBarVisibility="Visible" 
                
                AllowDrop="True"
                Drop="Canvas_Drop"
                PreviewMouseLeftButtonUp="CanvasLabel_PreviewMouseLeftButtonUp"
                PreviewMouseMove="CanvasLabel_PreviewMouseMove"
            />

        </Grid>

        <Button Grid.Row="1" Grid.Column="2">Insert To Code</Button>
    </Grid>

</UserControl>