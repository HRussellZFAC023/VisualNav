<UserControl
    x:Class="VisualThreading.BuildingWindowControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:catalog="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.ImageCatalog"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:imaging="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.Imaging"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:theming="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Imaging"
    xmlns:toolkit="clr-namespace:Community.VisualStudio.Toolkit;assembly=Community.VisualStudio.Toolkit"
    xmlns:util="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Utilities"
    Name="BuildingWindow"
    d:DesignHeight="500"
    d:DesignWidth="1000"
    mc:Ignorable="d">

    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid
            Grid.Row="0"
            Grid.Column="3"
        >

            <Button>cancel</Button>

        </Grid>


        <Grid
            x:Name="history_list"
            Grid.Row="0"
            Grid.RowSpan="3"
            Grid.Column="0">

            <Label
                x:Name="VariableLabel"
                Width="99"
                HorizontalAlignment="Center"
                MouseMove="Variable_MouseMove">
                <Run
                    x:Name="Variable"
                    Background="red"
                    Text="Variable" />

            </Label>


            <Label
                x:Name="OperatorLabel"
                Width="99"
                HorizontalAlignment="Left"
                MouseMove="Operator_MouseMove" Margin="0,26,0,-26">
                <Run
                    x:Name="Operator"
                    Background="Green"
                    Text="Operater" />
            </Label>



            <Label
                x:Name="IfLabelLabel"
                Width="99"
                HorizontalAlignment="Left"
                MouseMove="If_MouseMove" Margin="0,55,0,-55">
                <Run
                    x:Name="Iflabel"
                    Background="Aqua"
                    Text="if ( conditions ) { &#xD;&#xA;    statements&#xD;&#xA;} " />
            </Label>


            <Label
                x:Name="IfelseLabelLabel"
                Width="99"
                HorizontalAlignment="Left"
                MouseMove="Ifelse_MouseMove" Margin="0,121,0,-121">
                <Run
                    x:Name="Ifelselabel"
                    Background="yellow"
                    Text="if ( conditions ) { &#xD;&#xA;    statements &#xD;&#xA;} else { &#xD;&#xA;    statements &#xD;&#xA;} " />
            </Label>
            <!--
            <Label
                x:Name="label1"
                Width="85"
                Height="42"
                Margin="4,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Background="AliceBlue"
                MouseMove="Label_MouseMove">
                <TextBox
                    x:Name="textbox1"
                    Width="75"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="Orange"
                    MouseMove="textbox1_MouseMove"
                    Text="variable"
                    TextWrapping="Wrap" />
            </Label>
            -->
        </Grid>

        <Grid
            Grid.Column="1" Grid.Row="1"
        >
            <Canvas
                Width="400"
                Height="400"
                x:Name="canvasLabels"
                AllowDrop="True"
                Background="Beige"
                DragEnter="canvasLabels_DragEnter"
                Drop="Canvas_Drop"
                MouseMove="canvasLabels_MouseMove"
                PreviewMouseLeftButtonUp="CanvasLabel_PreviewMouseLeftButtonUp"
                PreviewMouseMove="CanvasLabel_PreviewMouseMove"
                ScrollViewer.HorizontalScrollBarVisibility="Visible"
            />
        </Grid>

        <Grid
            Grid.Column="2" Grid.Row="1"
        >
            <RichTextBox
                Width="400"
                Height="400"
                >
                <FlowDocument>
                    <Paragraph>
                        <Run Background="Red">Statement 1</Run>
                        <Run Background="Green">Statement 2</Run>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>

        </Grid>

        <Grid
            Grid.Row="2"
            Grid.Column="3"
            >
            <Button Grid.Row="1" Grid.Column="2">Insert To Code</Button>
        </Grid>

    </Grid>

</UserControl>