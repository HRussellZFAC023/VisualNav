<UserControl
    x:Class="VisualThreading.BuildingWindowControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:catalog="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.ImageCatalog"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:imaging="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.Imaging"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:theming="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Imaging"
    xmlns:toolkit="clr-namespace:Community.VisualStudio.Toolkit;assembly=Community.VisualStudio.Toolkit"
    xmlns:util="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Utilities"
    Name="BuildingWindow"
    d:DesignHeight="500"
    d:DesignWidth="1000"
    mc:Ignorable="d">

    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid
            x:Name="history_list"
            Grid.Row="0"
            Grid.Column="0">

            <Label
                x:Name="VariableLabel"
                Width="99"
                Margin="0,0,0,453"
                HorizontalAlignment="Center"
                MouseMove="Variable_MouseMove">
                <Run
                    x:Name="Variable"
                    Background="red"
                    Text="Variable" />

            </Label>


            <Label
                x:Name="OperatorLabel"
                Width="99"
                Margin="0,28,0,426"
                HorizontalAlignment="Center"
                MouseMove="Operator_MouseMove">
                <Run
                    x:Name="Operator"
                    Background="Green"
                    Text="Operater" />
            </Label>



            <Label
                x:Name="IfLabelLabel"
                Width="99"
                Margin="0,60,0,365"
                HorizontalAlignment="Center"
                MouseMove="If_MouseMove">
                <Run
                    x:Name="Iflabel"
                    Background="Aqua"
                    Text="if ( conditions ) { &#xD;&#xA;    statements&#xD;&#xA;} " />
            </Label>


            <Label
                x:Name="IfelseLabelLabel"
                Width="99"
                Margin="0,116,0,276"
                HorizontalAlignment="Center"
                MouseMove="Ifelse_MouseMove">
                <Run
                    x:Name="Ifelselabel"
                    Background="yellow"
                    Text="if ( conditions ) { &#xD;&#xA;    statements &#xD;&#xA;} else { &#xD;&#xA;    statements &#xD;&#xA;} " />
            </Label>
            <!--
            <Label
                x:Name="label1"
                Width="85"
                Height="42"
                Margin="4,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Background="AliceBlue"
                MouseMove="Label_MouseMove">
                <TextBox
                    x:Name="textbox1"
                    Width="75"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="Orange"
                    MouseMove="textbox1_MouseMove"
                    Text="variable"
                    TextWrapping="Wrap" />
            </Label>
            -->
        </Grid>

        <Grid
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Width="880"
            Margin="0,0,0,19"
            HorizontalAlignment="Right">

            <Canvas
                x:Name="canvasLabels"
                Width="626"
                Height="342"
                Margin="78,50,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                AllowDrop="True"
                Background="Beige"
                DragEnter="canvasLabels_DragEnter"
                Drop="Canvas_Drop"
                MouseMove="canvasLabels_MouseMove"
                PreviewMouseLeftButtonUp="CanvasLabel_PreviewMouseLeftButtonUp"
                PreviewMouseMove="CanvasLabel_PreviewMouseMove"
                ScrollViewer.HorizontalScrollBarVisibility="Visible" />

        </Grid>

        <Button Grid.Row="1" Grid.Column="2">Insert To Code</Button>
    </Grid>

</UserControl>